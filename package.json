{
  "name": "lint-pr-title-action",
  "version": "1.0.0",
  "private": true,
  "description": "GitHub Action for linting the title of a Pull Request",
  "main": "lib/main.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tobiastimm/lint-pr-title-action.git"
  },
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "pack": "ncc build",
    "bundle": "npm run build && npm run pack"
  },
  "keywords": [],
  "author": "Tobias Timm",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "1.10.1",
    "@actions/github": "6.0.0",
    "@commitlint/lint": "^19.2.2",
    "@commitlint/load": "^19.2.0"
  },
  "devDependencies": {
    "@commitlint/types": "^19.0.3",
    "@types/node": "^20.14.5",
    "js-yaml": "^4.1.0",
    "prettier": "^3.3.2",
    "typescript": "^5.4.5"
  }
}
